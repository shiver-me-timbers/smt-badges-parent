<svg id="smt-svg" xmlns="http://www.w3.org/2000/svg" width="{{badge.width}}" height="{{badge.height}}">
    <linearGradient id="smt-badge-gradient" x2="0" y2="100%">
        <stop offset="0" stop-color="#bbb" stop-opacity=".1" />
        <stop offset="1" stop-opacity=".1" />
    </linearGradient>
    <rect id="smt-badge-subject-rectangle" rx="3" width="{{badge.width}}" height="{{badge.height}}" fill="#555" />
    <rect id="smt-badge-status-rectangle" rx="3" x="{{badge.subjectWidth}}" width="{{badge.statusWidth}}" height="{{badge.height}}" fill="{{badge.colour}}" />
    <path id="smt-badge-divider-path" fill="{{badge.colour}}" d="M{{badge.subjectWidth}} 0h4v{{badge.height}}H{{badge.subjectWidth}}z" />
    <rect id="smt-badge-gradient-rectangle" rx="3" width="{{badge.width}}" height="{{badge.height}}" fill="url(#smt-badge-gradient)" />
    <g id="smt-badge-text-container" fill="#fff" text-anchor="middle" font-family="{{badge.fontFamily}},Verdana,Geneva,sans-serif" font-size="{{badge.fontSize}}">
        <text id="smt-badge-subject-shadow" x="{{badge.subjectX}}" y="{{badge.textShadowY}}" fill="#010101" fill-opacity=".3">{{badge.subject}}</text>
        <text id="smt-badge-subject" x="{{badge.subjectX}}" y="{{badge.textY}}">{{badge.subject}}</text>
        <text id="smt-badge-status-shadow" x="{{badge.statusX}}" y="{{badge.textShadowY}}" fill="#010101" fill-opacity=".3">{{badge.status}}</text>
        <text id="smt-badge-status" x="{{badge.statusX}}" y="{{badge.textY}}">{{badge.status}}</text>
    </g>
</svg>