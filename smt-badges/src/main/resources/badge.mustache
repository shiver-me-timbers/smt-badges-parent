<svg xmlns="http://www.w3.org/2000/svg" width="{{badge.width}}" height="{{badge.height}}">
    {{#badge.isFlat}}
        <linearGradient id="smt-bg" x2="0" y2="100%">
            <stop offset="0" stop-color="#bbb" stop-opacity=".1" />
            <stop offset="1" stop-opacity=".1" />
        </linearGradient>
    {{/badge.isFlat}}
    {{#badge.isPlastic}}
        <linearGradient id="b" x2="0" y2="100%">
            <stop offset="0" stop-color="#fff" stop-opacity=".7" />
            <stop offset=".1" stop-color="#aaa" stop-opacity=".1" />
            <stop offset=".9" stop-opacity=".3" />
            <stop offset="1" stop-opacity=".5" />
        </linearGradient>
    {{/badge.isPlastic}}
    <rect rx="3" width="{{badge.width}}" height="{{badge.height}}" fill="#555" />
    <rect rx="3" x="{{badge.subjectWidth}}" width="{{badge.statusWidth}}" height="{{badge.height}}" fill="{{badge.colour}}" />
    <path fill="{{badge.colour}}" d="M{{badge.subjectWidth}} 0h4v{{badge.height}}H{{badge.subjectWidth}}z" />
    <rect rx="3" width="{{badge.width}}" height="{{badge.height}}" fill="url(#smt-bg)" />
    <g fill="#fff" text-anchor="middle" font-family="{{badge.fontFamily}},Verdana,Geneva,sans-serif" font-size="{{badge.fontSize}}">
        <text x="{{badge.subjectX}}" y="{{badge.textShadowY}}" fill="#010101" fill-opacity=".3">{{badge.subject}}</text>
        <text x="{{badge.subjectX}}" y="{{badge.textY}}">{{badge.subject}}</text>
        <text x="{{badge.statusX}}" y="{{badge.textShadowY}}" fill="#010101" fill-opacity=".3">{{badge.status}}</text>
        <text x="{{badge.statusX}}" y="{{badge.textY}}">{{badge.status}}</text>
    </g>
</svg>